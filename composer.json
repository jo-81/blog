{
    "name": "colpart/blog",
    "description": "CrÃ©ation d'un blog en PHP",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "Blog\\": "src/",
            "Framework\\": "Framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "jo-81",
            "email": "geoffroy.colpart81@gmail.com"
        }
    ],
    "require-dev": {
        "symfony/var-dumper": "^7.3",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.89",
        "phpunit/phpunit": "^12.4"
    },
    "require": {
        "php": ">=8.4",
        "php-di/php-di": "^7.1"
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": [
            "phpunit --colors=always"
        ],
        "coverage": "phpunit --colors=always --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix --ansi",
        "stan": "phpstan analyse --ansi --memory-limit=512M",
        "quality": [
            "@cs-fix",
            "@stan",
            "@test"
        ]
    }
}
